@model WebsitePhanPhoiSach.Models.phieunhap

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chi tiết phiếu nhập</h2>

<div>
    <h4>Phiếu nhập</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Người giao sách : ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nguoigiaosach)
        </dd>

        <dt>
            @Html.DisplayName("Ngày nhập : ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ngaynhap)
        </dd>

        <dt>
            @Html.DisplayName("Người viết phiếu :")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nguoivietphieu)
        </dd>

        <dt>
            @Html.DisplayName("Nhà xuất bản : ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nxb.tennxb)
        </dd>

    </dl>
</div>
<table class="table">
    <tr>
       <th>@Html.DisplayName("Tên Sách")</th>
        <th>@Html.DisplayName("Số lượng nhập ")</th>    
        <th></th>
    </tr>
    @if (Model.ctpns != null)
    {
        foreach(var item in Model.ctpns)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem=>item.sach.tensach)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.soluong)
                </td>
            </tr>

        }
    }
    else
    {
        <tr>
            <td>Không có chi tiết</td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.idpn }) |
    @Html.ActionLink("Trở về trang danh sách", "Index")
</p>
