@model WebsitePhanPhoiSach.Models.nxb

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Xóa</h2>

<h3>Bạn có chắc chắn là mình muốn xóa đi chứ?</h3>
<div>
    <h4>Nhà xuất bản</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Tên nhà xuất bản")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tennxb)
        </dd>

        <dt>
            @Html.DisplayName("Địa chỉ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.diachi)
        </dd>

        <dt>
            @Html.DisplayName("Số điện thoại")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sodt)
        </dd>

        <dt>
            @Html.DisplayName("Số tài khoản")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sotk)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Trở về trang danh sách", "Index")
        </div>
    }
</div>
