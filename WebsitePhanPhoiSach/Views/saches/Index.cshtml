@model IEnumerable<WebsitePhanPhoiSach.Models.sach>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sách</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Tên sách")
        </th>
        <th>
            @Html.DisplayName("Tác giả")
        </th>
        <th>
            @Html.DisplayName("Giá xuất")
        </th>
        <th>
            @Html.DisplayName("Giá nhập")
        </th>
        <th>
            @Html.DisplayName("Lĩnh vực")
        </th>
        <th>
            @Html.DisplayName("Nhà xuất bản")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.tensach)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tacgia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.giaxuat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.gianhap)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.linhvuc.tenlv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nxb.tennxb)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.idsach }) |
            @Html.ActionLink("Chi tiết sách", "Details", new { id=item.idsach }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.idsach })
        </td>
    </tr>
}

</table>
