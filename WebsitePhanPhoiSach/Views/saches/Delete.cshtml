@model WebsitePhanPhoiSach.Models.sach

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Xóa sách </h2>

<h3>Bạn có chắc là mình muốn xóa sách này chứ ?</h3>
<div>
    <h4>Sách</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Tên sách")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tensach)
        </dd>

        <dt>
            @Html.DisplayName("Tác giả")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tacgia)
        </dd>

        <dt>
            @Html.DisplayName("Giá xuất")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.giaxuat)
        </dd>

        <dt>
            @Html.DisplayName("Giá nhập")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.gianhap)
        </dd>

        <dt>
            @Html.DisplayName("Lĩnh vực")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.linhvuc.tenlv)
        </dd>

        <dt>
            @Html.DisplayName("Nhà xuất bản")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nxb.tennxb)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Trở về trang danh sách", "Index")
        </div>
    }
</div>
