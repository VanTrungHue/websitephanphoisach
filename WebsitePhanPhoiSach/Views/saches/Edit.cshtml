                @Html.EditorFor(model => model.tacgia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tacgia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.idnxb, "Nhà xuất bản", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idnxb", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idnxb, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.idlv, "Lĩnh vực", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idlv", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idlv, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.giaxuat, "Giá xuất", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
